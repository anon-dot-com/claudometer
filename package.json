{
  "name": "claudometer",
  "version": "0.1.0",
  "private": true,
  "description": "Measure engineering productivity across Claude and Git",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:dashboard\"",
    "dev:agent": "cd agent && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "build": "npm run build:dashboard",
    "build:dashboard": "cd dashboard && npm run build",
    "install:all": "npm install && cd agent && npm install && cd ../backend && npm install && cd ../dashboard && npm install",
    "test:agent": "cd agent && node bin/cli.js collect --dry-run",
    "cli": "cd agent && node bin/cli.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@clerk/themes": "^2.4.48"
  }
}
